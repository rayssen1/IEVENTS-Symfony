{% extends 'evenement/base-front.html.twig' %}

{% block title %}
  {% if is_single %}
    {{ evenements[0].titre }}
  {% else %}
    Liste des Événements
  {% endif %}
{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
  

  <div class="card">
    <div class="card-body">
      <section id="schedule" class="row">
        <div class="title-start schedule-menu col-md-4 col-md-offset-4">
          <br />
          <h2>Événements</h2>
          <p class="sub-text text-center">Découvrez les détails des événements</p>
        </div>
        <ul class="timeline">
          {% for evenement in evenements %}
            <li {% if loop.index is even %}class="timeline-inverted"{% endif %}>
              <div class="timeline-badge">
                <a><i class="fa fa-circle" id=""></i></a>
              </div>
              <div class="timeline-panel">
                <div class="timeline-heading">
                  <h4>{{ evenement.titre }}</h4>
                </div>
                <div class="timeline-body">
                  <p class="timeline-desc col-md-6">
                    {% if is_single %}
                      {{ evenement.description }}
                    {% else %}
                      {{ evenement.description|slice(0, 50) ~ (evenement.description|length > 50 ? '...' : '') }}
                    {% endif %}
                    {% if evenement.img %}
                      <br>
                      <img src="{{ asset(evenement.img) }}" alt="{{ evenement.titre }}"
                           class="rounded border shadow-sm" style="height: 110px; width: 110px; object-fit: cover; margin-top: 10px;">
                    {% else %}
                      <br>
                      <span class="text-muted fst-italic">Pas d'image</span>
                    {% endif %}
                  </p>
                  <p class="timeline-other col-md-6">
                    <em class="timeline-item">Lieu: {{ evenement.lieu }}</em>
                    <em class="timeline-item">Places: {{ evenement.nbPlace }}</em>
                    <em class="timeline-item">Prix: {{ evenement.prix }} TND</em>
                    <em class="timeline-item">Date: {{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d') : '' }}</em>
                    <em class="timeline-item">Statut: 
                      <span class="badge 
                        {% if evenement.status == 'En cours' %}bg-label-success
                        {% elseif evenement.status == 'Depassé' %}bg-label-danger
                        {% else %}bg-label-primary{% endif %}">
                        {{ evenement.status }}
                      </span>
                    </em>
                    <em class="timeline-item">Event Speaker: 
                      {% if evenement.eventspeakerId %}
                        {{ evenement.eventspeakerId.nom }}
                      {% else %}
                        <span class="text-muted fst-italic">Aucun speaker</span>
                      {% endif %}
                    </em>
                    {% if not is_single %}
                     
                    {% endif %}
                  </p>
                  <a href="{{ path('app_reservation_new', {'eventId': evenement.id}) }}" 
                  class="form-buttons">
                  Réserver
                  </a>
                </div>
              </div>
            </li>
          {% else %}
            <li>
              <div class="timeline-panel text-center text-muted fst-italic py-4">
                Aucun événement trouvé
              </div>
            </li>
          {% endfor %}
          <li class="clearfix no-float"></li>
        </ul>
      </section>
    </div>
  </div>

  {% if is_single %}
    <div class="mt-3">
      <a href="{{ path('app_events_index') }}" class="btn btn-secondary">
        <i class="bx bx-arrow-back me-1"></i> Retour à la liste
      </a>
    </div>
  {% endif %}
</div>
{% endblock %}