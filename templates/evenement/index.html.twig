{% extends 'evenement/base-back.html.twig' %}

{% block title %}Liste des Événements{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Événements /</span> Liste
  </h4>

  <!-- Bouton Créer un événement -->
  <div class="mb-3">
    <a href="{{ path('app_evenement_new') }}" class="btn btn-success">
      <i class="bx bx-plus me-1"></i> Créer un nouvel événement
    </a>
  </div>

  <!-- Tableau -->
  <div class="card">
    <div class="table-responsive text-nowrap">
      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Date</th>
            <th>Lieu</th>
            <th>Places</th>
            <th>Prix</th>
            <th>Statut</th>
            <th>Image</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0">
          {% for evenement in evenements %}
            <tr>
              <td>{{ evenement.id }}</td>
              <td><strong>{{ evenement.titre }}</strong></td>
              <td>{{ evenement.description }}</td>
              <td>{{ evenement.dateEvent ? evenement.dateEvent|date('Y-m-d') : '' }}</td>
              <td>{{ evenement.lieu }}</td>
              <td>{{ evenement.nbPlace }}</td>
              <td>{{ evenement.prix }} TND</td>
              <td>
                <span class="badge bg-label-primary">{{ evenement.status }}</span>
              </td>
              <td>
                {% if evenement.img %}
                  <img src="{{ asset(evenement.img) }}" alt="Image"
                       class="rounded border shadow-sm" style="height: 48px; width: 80px; object-fit: cover;">
                {% else %}
                  <span class="text-muted fst-italic">Pas d'image</span>
                {% endif %}
              </td>
              <td>
                <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}"
                   class="btn btn-sm btn-outline-primary mb-1">
                  <i class="bx bx-show"></i>
                </a>
                <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}"
                   class="btn btn-sm btn-outline-warning mb-1">
                  <i class="bx bx-edit-alt"></i>
                </a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="10" class="text-center text-muted fst-italic py-4">Aucun événement trouvé</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}
