{% extends 'evenement/base-back.html.twig' %}

{% block title %}Détails de l'Événement{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold mb-0">
            <span class="text-muted fw-light">Événements /</span> Détails
        </h4>
        <div>
            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-warning me-2">
                <i class="bx bx-edit-alt me-1"></i> Modifier
            </a>
            {{ include('evenement/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Informations de l'événement</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th width="20%" class="bg-light">ID</th>
                        <td>{{ evenement.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Titre</th>
                        <td>{{ evenement.titre }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Description</th>
                        <td>{{ evenement.description }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Date</th>
                        <td>{{ evenement.dateEvent ? evenement.dateEvent|date('d/m/Y H:i') : '' }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Lieu</th>
                        <td>{{ evenement.lieu }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Statut</th>
                        <td>{{ evenement.status }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Places disponibles</th>
                        <td>{{ evenement.nbPlace }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Prix</th>
                        <td>{{ evenement.prix }} TND</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Image</th>
                        <td>
                            {% if evenement.img %}
                                <img src="{{ asset('images/events/' ~ evenement.img) }}" alt="Image de l'événement"
                                     class="img-thumbnail" style="max-width: 300px;">
                            {% else %}
                                <span class="text-muted">Aucune image</span>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary">
            <i class="bx bx-arrow-back me-1"></i> Retour à la liste
        </a>
    </div>
</div>
{% endblock %}