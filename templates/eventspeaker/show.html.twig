{% extends 'evenement/base-back.html.twig' %}

{% block title %}Détails de l'Eventspeaker{% endblock %}

{% block body %}
<div class="container-xxl flex-grow-1 container-p-y">
  <h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Eventspeakers /</span> Détails
  </h4>

  <div class="row">
    <div class="col-md-12">
      <div class="card mb-4">
        <h5 class="card-header">Détails de l'Eventspeaker</h5>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <strong>Id :</strong> {{ eventspeaker.id }}
            </div>
            <div class="col-md-6 mb-3">
              <strong>Nom :</strong> {{ eventspeaker.nom }}
            </div>
            <div class="col-md-6 mb-3">
              <strong>Prénom :</strong> {{ eventspeaker.prenom }}
            </div>
            <div class="col-md-6 mb-3">
              <strong>Statut :</strong> {{ eventspeaker.status }}
            </div>
            <div class="col-md-12 mb-3">
              <strong>Description :</strong> {{ eventspeaker.description }}
            </div>
          </div>
        </div>
      </div>

      <div class="d-flex gap-2">
        <a href="{{ path('app_eventspeaker_index') }}" class="btn btn-outline-secondary">
          <i class="bx bx-arrow-back me-1"></i> Retour à la liste
        </a>
        {{ include('eventspeaker/_delete_form.html.twig') }}
      </div>
    </div>
  </div>
</div>
{% endblock %}