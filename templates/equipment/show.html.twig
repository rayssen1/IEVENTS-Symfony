{# templates/equipment/show.html.twig #}
{% extends 'equipment/base-back.html.twig' %}

{% block title %}Détails de l'Équipement{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold mb-0">
            <span class="text-muted fw-light">Équipements /</span> Détails
        </h4>
        <div>
            <a href="{{ path('equipment_edit', {'id': equipment.id}) }}" class="btn btn-warning me-2">
                <i class="bx bx-edit-alt me-1"></i> Modifier
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">Informations de l'équipement</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th width="20%" class="bg-light">ID</th>
                        <td>{{ equipment.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Nom</th>
                        <td>{{ equipment.name }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Type</th>
                        <td>{{ equipment.type }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Description</th>
                        <td>{{ equipment.description }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Quantité</th>
                        <td>{{ equipment.quantity }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Statut</th>
                        <td>{{ equipment.status }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Enregistrements de maintenance</th>
                        <td>{{ equipment.maintenancerecords|length }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <a href="{{ path('equipment_maintenance_show', {'id': equipment.id}) }}" 
   class="btn btn-info btn-sm rounded-circle d-flex align-items-center justify-content-center" 
   style="width: 80px; height: 40px;" 
   data-bs-toggle="tooltip" 
   data-bs-placement="top" 
   title="Voir la Maintenance">
    <i class="bx bx-wrench"></i>
</a>

    <div class="mt-4">
        <a href="{{ path('equipment_index') }}" class="btn btn-outline-secondary">
            <i class="bx bx-arrow-back me-1"></i> Retour à la liste
        </a>
    </div>
</div>




{% endblock %}